			<!-- 주문데이터 -->
	<select id="cartOrder" parameterType="String" resultType="com.bitc.team2.dto.CartDto">
		
		<![CDATA[
			SELECT
				*
			FROM
				menu_cart
			where 
				user_id = #{userId}
				
			and 
				deleted_yn ='N'
			and 
				pay_success ='N'
				
		]]>
	</select>

	<!-- 유저정보 -->
<select id="getUser" parameterType="String" resultType="com.bitc.team2.dto.UserDto">
		
		<![CDATA[
			SELECT
				*
			FROM
				user
			where 
				user_id = #{userId}
			
				
		]]>

</select>

  <!-- 카트보기 -->
	<select id="getCart" parameterType="String" resultType="com.bitc.team2.dto.CartDto">
		
		<![CDATA[
			SELECT
				*
			FROM
				menu_cart
			where 
				user_id = #{userId}
				
			and 
				deleted_yn ='N'
				and 
				pay_success ='N'
				
		]]>
	</select>
	 
	<!-- 주문내역 -->
		<select id="getSuccessList" parameterType="String" resultType="com.bitc.team2.dto.CartDto">
		
		<![CDATA[
			SELECT
				*
			FROM
				menu_cart
			where 
				user_id = #{userId}
				
			and 
				deleted_yn ='N'
				and 
				pay_success ='Y'
			ORDER BY
				cart_id DESC
				
		]]>
	</select>
	
