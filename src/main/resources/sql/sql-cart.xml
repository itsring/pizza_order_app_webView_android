	<update id="paySuccess" parameterType="com.bitc.team2.dto.CartDto">
		<![CDATA[
			UPDATE
				menu_cart
			SET
			 pay_success = 'Y'
			 
			where 
				user_id = #{userId}
			and
			    deleted_yn = 'N'
		]]>
	</update>
	
	
	<update id="paySuccess1" parameterType="com.bitc.team2.dto.CartDto">
		<![CDATA[
			UPDATE
				menu_cart
			SET
				order_date = #{orderDate}
			 
			where 
				user_id = #{userId}
			and
			    pay_success = 'N'
		]]>
	</update>
	
	
	
		<!--가격총합  -->

	 <select id="sumMoney" parameterType="String" resultType="int">
	 
       	<![CDATA[
        SELECT SUM(total_price) 
        FROM menu_cart
        WHERE 
            user_id = #{userId}
        ]]>
        
    </select>
	
	
	<!--삭제 -->
	
	<update id="deleteCart" parameterType="int">
		<![CDATA[
			UPDATE
				menu_cart
			SET
				deleted_yn = 'Y'
			WHERE
				cart_id = #{cartId}
		]]>
	</update>
	
			
</mapper>
