	<!-- store 위치 저장 -->	
	<update id="updateStore" parameterType="String">
		<![CDATA[ 
			update
				user
			set
				user_store = #{storeName}
			where 
				user_id = #{userId}				
		]]>
	</update>
	
	
	
	<!-- 주문자 정보 확인 주문자 정보 부분 -->
	<select id="selectUserList" resultType="com.bitc.team2.dto.UserDto">
		
		<![CDATA[ 
			SELECT
				*
			FROM
				user
		]]>
	</select>
	<select id="selectMenuList" resultType="com.bitc.team2.dto.CartDto">
		<![CDATA[
			SELECT
				*
			FROM
				menu_cart
			where
				user_id = #{userId}
		]]>
	</select>
</mapper>